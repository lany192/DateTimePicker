<resources>
    <!--  Color for the solid color background if such for optimized rendering. -->
    <attr name="picker_solidColor" format="color|reference" />
    <!--  The divider for making the selection area. -->
    <attr name="picker_selectionDivider" format="reference" />
    <!--  The height of the selection divider. -->
    <attr name="picker_selectionDividerHeight" format="dimension" />
    <!--  The distance between the two selection dividers. -->
    <attr name="picker_selectionDividersDistance" format="dimension" />
    <!--  The min height of the NumberPicker. -->
    <attr name="picker_internalMinHeight" format="dimension" />
    <!--  The max height of the NumberPicker. -->
    <attr name="picker_internalMaxHeight" format="dimension" />
    <!--  The min width of the NumberPicker. -->
    <attr name="picker_internalMinWidth" format="dimension" />
    <!--  The max width of the NumberPicker. -->
    <attr name="picker_internalMaxWidth" format="dimension" />
    <!--  The layout of the number picker. -->
    <attr name="picker_internalLayout" format="reference" />
    <!--  textSize-->
    <attr name="picker_selectionTextSize" format="dimension" />
    <!--  textColor-->
    <attr name="picker_selectionTextColor" format="color|reference" />
    <!-- The unit of the number picker. -->
    <attr name="picker_number_unit" format="string" />
    <!-- ################################################## -->
    <!-- The first year (inclusive), for example "1940".-->
    <attr name="picker_startYear" format="integer" />
    <!-- The last year (inclusive), for example "2010".-->
    <attr name="picker_endYear" format="integer" />
    <!-- Whether the day view is shown. -->
    <attr name="picker_showDay" format="boolean" />
    <!-- The minimal date shown by this calendar view in mm/dd/yyyy format. -->
    <attr name="picker_minDate" format="string" />
    <!-- The maximal date shown by this calendar view in mm/dd/yyyy format. -->
    <attr name="picker_maxDate" format="string" />
    <!--开始年份-->
    <attr name="startYear" format="integer" />
    <!--结束年份-->
    <attr name="endYear" format="integer" />
    <!-- The minimal date shown by this calendar view in mm/dd/yyyy format. -->
    <attr name="minDate" format="string" />
    <!-- The maximal date shown by this calendar view in mm/dd/yyyy format. -->
    <attr name="maxDate" format="string" />

    <declare-styleable name="NumberPicker">
        <attr name="picker_solidColor" />
        <attr name="picker_selectionDivider" />
        <attr name="picker_selectionDividerHeight" />
        <attr name="picker_selectionDividersDistance" />
        <attr name="picker_internalMinHeight" />
        <attr name="picker_internalMaxHeight" />
        <attr name="picker_internalMinWidth" />
        <attr name="picker_internalMaxWidth" />
        <attr name="picker_internalLayout" />
        <attr name="picker_selectionTextSize" />
        <attr name="picker_selectionTextColor" />
    </declare-styleable>

    <declare-styleable name="DatePicker">
        <attr name="picker_solidColor" />
        <attr name="picker_selectionDivider" />
        <attr name="picker_selectionDividerHeight" />
        <attr name="picker_selectionDividersDistance" />
        <attr name="picker_internalMinHeight" />
        <attr name="picker_internalMaxHeight" />
        <attr name="picker_internalMinWidth" />
        <attr name="picker_internalMaxWidth" />
        <attr name="picker_internalLayout" />
        <attr name="picker_selectionTextSize" />
        <attr name="picker_selectionTextColor" />

        <attr name="picker_startYear" />
        <attr name="picker_endYear" />
        <attr name="picker_showDay" />
        <attr name="picker_minDate" />
        <attr name="picker_maxDate" />
    </declare-styleable>

    <declare-styleable name="DateTimePicker">
        <attr name="picker_solidColor" />
        <attr name="picker_selectionDivider" />
        <attr name="picker_selectionDividerHeight" />
        <attr name="picker_selectionDividersDistance" />
        <attr name="picker_internalMinHeight" />
        <attr name="picker_internalMaxHeight" />
        <attr name="picker_internalMinWidth" />
        <attr name="picker_internalMaxWidth" />
        <attr name="picker_internalLayout" />
        <attr name="picker_selectionTextSize" />
        <attr name="picker_selectionTextColor" />

        <attr name="picker_startYear" />
        <attr name="picker_endYear" />
        <attr name="picker_minDate" />
        <attr name="picker_maxDate" />
    </declare-styleable>
</resources>