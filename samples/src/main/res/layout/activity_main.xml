<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/date_picker_show_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="DatePicker:"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp">

            <com.lany.picker.DatePicker
                android:id="@+id/date_picker_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:dp_dayViewShown="false" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <com.lany.picker.DatePicker
                android:id="@+id/date_picker_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#dddddd" />

        <TextView
            android:id="@+id/time_picker_show_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="TimePicker:"
            android:textSize="14sp" />

        <com.lany.picker.TimePicker
            android:id="@+id/time_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#dddddd" />

        <TextView
            android:id="@+id/hour_minute_picker_show_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="HourMinutePicker:"
            android:textSize="14sp" />

        <com.lany.picker.HourMinutePicker
            android:id="@+id/hour_minute_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#dddddd" />

        <TextView
            android:id="@+id/ymdh_picker_show_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="YMDHPicker:"
            android:textSize="14sp" />

        <com.lany.picker.YMDHPicker
            android:id="@+id/ymdhPicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#dddddd" />

        <TextView
            android:id="@+id/date_time_picker_show_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="DateTimePicker:"
            android:textSize="14sp" />

        <com.lany.picker.DateTimePicker
            android:id="@+id/dateTimePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp" />
    </LinearLayout>
</ScrollView>